<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".loginsignupfragment.LogIn_Fragment"
    android:background="@color/white">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="15dp">



        <ImageView
            android:layout_width="match_parent"
            android:layout_height="204dp"
            android:src="@mipmap/feelhut_icon"
            android:id="@+id/feelhuticon">

        </ImageView>

        <TextView
            android:id="@+id/Logintext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:text="SignUp"
            android:textSize="55sp"
            android:layout_marginTop="150dp"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:background="@drawable/edittext_background"
            android:layout_below="@id/Logintext"
            android:hint="Your Name"
            android:id="@+id/name"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:inputType="text"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:background="@drawable/edittext_background"
            android:layout_below="@id/name"
            android:inputType="textEmailAddress"
            android:hint="Email Address"
            android:id="@+id/emailtext"
            android:padding="10dp"
            android:layout_marginTop="10dp"/>


        <EditText
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:hint="PassWord(at least 8 characters)"
            android:background="@drawable/edittext_background"
            android:layout_below="@id/emailtext"
            android:id="@+id/passwordtext"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:inputType="textPassword"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:hint="Confirm PassWord"
            android:background="@drawable/edittext_background"
            android:layout_below="@id/passwordtext"
            android:id="@+id/confirmpassword"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:inputType="textPassword"/>


        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/confirmpassword"
            android:layout_marginTop="14dp"
            android:background="@drawable/button_background"
            android:text="SignUp"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="35dp"
            android:id="@+id/signupbutton"/>

        <View
            android:id="@+id/divider3"
            android:layout_width="158dp"
            android:layout_height="1dp"


            android:layout_above="@+id/alreadyhaveaccount"

            android:layout_marginStart="14dp"
            android:layout_marginBottom="18dp"
            android:layout_toEndOf="@+id/or"
            android:background="?android:attr/listDivider" />

        <TextView
            android:id="@+id/or"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/alreadyhaveaccount"
            android:layout_centerInParent="true"
            android:layout_marginBottom="8dp"
            android:text="or"></TextView>

        <View
            android:id="@+id/divider2"
            android:layout_width="158dp"
            android:layout_height="1dp"


            android:layout_above="@+id/alreadyhaveaccount"
            android:layout_marginEnd="14dp"
            android:layout_marginBottom="18dp"
            android:layout_toStartOf="@+id/or"
            android:background="?android:attr/listDivider" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already Have Account? SignIn Here"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:textSize="20sp"
            android:textColor="@color/orange"
            android:id="@+id/alreadyhaveaccount"
            />



    </RelativeLayout>


</FrameLayout>